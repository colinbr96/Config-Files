{
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "cSpell.spellCheckDelayMs": 500,
    "cSpell.allowCompoundWords": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    },
    "editor.fontFamily": "Consolas ligaturized v2, Consolas, monospace",
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",
    "editor.rulers": [120],
    "editor.stickyScroll.enabled": true,
    "explorer.confirmDelete": false,
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "gitlens.blame.format": "${author|10} ${message|40?} ${agoOrDate|14-}",
    "macros": {
        "createAsyncArrowFunction": [
            {
                "args": {
                    "text": "async () => {}"
                },
                "command": "type"
            },
            "cursorLeft"
        ],
        "createArrowFunction": [
            {
                "args": {
                    "text": "() => {}"
                },
                "command": "type"
            },
            "cursorLeft"
        ]
    },
    "python.formatting.autopep8Args": ["--max-line-length=120"],
    "selectline.alignment": "right",
    "selectline.statusbarPriority": 101,
    "todohighlight.keywords": [
        {
            "backgroundColor": "#6e6124",
            "color": "yellow",
            "isWholeLine": false,
            "text": "TODO"
        },
        {
            "backgroundColor": "#681212",
            "color": "#ff4747",
            "text": "FIXME"
        },
        {
            "backgroundColor": "#681212",
            "color": "#ff4747",
            "text": "FIX ME"
        },
        {
            "backgroundColor": "black",
            "color": "green",
            "text": "DEBUGGING"
        },
        {
            "backgroundColor": "black",
            "color": "green",
            "text": "DEBUG"
        }
    ],
    "typescript.inlayHints.parameterNames.enabled": "literals",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "window.title": "${dirty}${rootName}${separator}${activeEditorShort}${separator}${appName}",
    "workbench.colorTheme": "Default Dark+",
    "workbench.editor.wrapTabs": true,
    "workbench.editorAssociations": [
        {
            "filenamePattern": "*.ipynb",
            "viewType": "jupyter.notebook.ipynb"
        }
    ],
    "workbench.list.horizontalScrolling": true,
    "workbench.quickOpen.preserveInput": true,
    "workbench.tree.indent": 20,
    "workbench.tree.renderIndentGuides": "always"
}
